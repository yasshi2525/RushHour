{
    "compilerOptions": {
        "sourceMap": true,
        "target": "es6",
        "module": "es2015",
        "moduleResolution": "node",
        "strictNullChecks": true,
        "strictPropertyInitialization": true,
        "noFallthroughCasesInSwitch": true,
        "noImplicitThis":true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "jsx": "react"
    },
    "exclude": [
        "node_modules",
        "public/js/bundle.*.js"
    ]
}