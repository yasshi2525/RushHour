{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run RushHour",
            "type": "shell",
            "command": "go run .",
            "options": {
                "cwd": "app"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "label": "go test",
            "type": "shell",
            "command": "go test -v ./... -coverprofile ../reports/golang/c.out |& tee /dev/tty | go-junit-report > ../reports/golang/results.xml",
            "options": {
                "cwd": "app"
            },
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": []
        },
        {
            "label": "build document",
            "type": "shell",
            "command": "docs/make.bat html",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "build-watch",
            "problemMatcher": [
                "$tsc",
                "$eslint-compact",
            ]
        },
        {
            "label": "swagger",
            "type": "shell",
            "command": "swag init -d app -o docs/api",
            "problemMatcher": []
        },
    ]
}