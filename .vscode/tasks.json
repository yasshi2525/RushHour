{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "run RushHour",
            "type": "shell",
            "command": "go run .",
            "problemMatcher": [
                "$go"
            ]
        },
        {
            "type": "npm",
            "script": "build",
            "problemMatcher": [
                "$tsc",
                "$eslint-compact"
            ],
            "options": {"cwd": "client"}
        },
        {
            "label": "build document",
            "type": "shell",
            "command": "docs/make.bat html",
            "problemMatcher": []
        },
        {
            "type": "npm",
            "script": "start",
            "problemMatcher": [
                "$tsc",
                "$eslint-compact"
            ],
            "options": {"cwd": "client"}
        },
        {
            "label": "swagger",
            "type": "shell",
            "command": "swag init -o docs/api",
            "problemMatcher": []
        }
    ]
}